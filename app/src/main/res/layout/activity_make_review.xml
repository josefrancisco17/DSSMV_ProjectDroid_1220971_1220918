<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.MakeReviewActivity">

    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/backReviewss"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.05" app:layout_constraintVertical_bias="0.023"
            android:onClick="backBookReviews"/>
    <TextView
            android:text="Make Review"
            android:layout_width="173dp"
            android:layout_height="47dp" android:id="@+id/textView6"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.942" app:layout_constraintVertical_bias="0.04"
            android:textSize="24sp"/>
    <TextView
            android:text="Write your review bellow:"
            android:layout_width="344dp"
            android:layout_height="42dp" android:id="@+id/textView9"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.492" app:layout_constraintVertical_bias="0.239"
            android:textAlignment="center" android:textSize="16sp"/>
    <Switch
            android:text="Recommended"
            android:layout_width="200dp"
            android:layout_height="52dp" android:id="@+id/switchRecommended"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.771" app:layout_constraintHorizontal_bias="0.17"/>
    <Button
            android:text="Submit"
            android:layout_width="126dp"
            android:layout_height="58dp" android:id="@+id/buttonSubmitReview"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.869" app:layout_constraintVertical_bias="0.777"/>
    <EditText
            android:layout_width="339dp"
            android:layout_height="282dp"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/textInputReview"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.498" android:hint="Type here"/>
</androidx.constraintlayout.widget.ConstraintLayout>
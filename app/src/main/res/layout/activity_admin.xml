<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.AdminActivity">

    <TextView
            android:text="Admin Menu"
            android:layout_width="270dp"
            android:layout_height="60dp" android:id="@+id/textView10"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.794" app:layout_constraintVertical_bias="0.044"
            android:textAlignment="center" android:textStyle="bold" android:textSize="24sp" android:typeface="serif"/>
    <Button
            android:text="Create"
            android:layout_width="270dp"
            android:layout_height="60dp" android:id="@+id/adminCreateLibraryButton"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.313" android:backgroundTint="#2196F3" android:textColor="#141414"
            android:textStyle="bold" android:textSize="16sp"/>
    <Button
            android:text="Delete"
            android:layout_width="270dp"
            android:layout_height="60dp" android:id="@+id/adminDeleteLibraryButton"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.402" android:backgroundTint="#F44336" android:textColor="#141414"
            android:textStyle="bold" android:textSize="16sp" app:layout_constraintHorizontal_bias="0.496"/>
    <TextView
            android:text="Libraries"
            android:layout_width="270dp"
            android:layout_height="40dp" android:id="@+id/textView13"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.235" android:textAlignment="center" android:textStyle="bold"
            android:textSize="20sp"/>
    <TextView
            android:text="Books"
            android:layout_width="270dp"
            android:layout_height="40dp" android:id="@+id/textView15"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.56" android:textSize="20sp" android:textStyle="bold"
            android:textAlignment="center"/>
    <Button
            android:text="Create"
            android:layout_width="270dp"
            android:layout_height="60dp" android:id="@+id/adminCreateBookButton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintVertical_bias="0.631"
            android:backgroundTint="#2196F3" android:textStyle="bold" android:textColor="#141414"
            android:textSize="16sp"/>
    <Button
            android:text="Log out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/adminLogOutButton"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.05" app:layout_constraintVertical_bias="0.061"/>
</androidx.constraintlayout.widget.ConstraintLayout>
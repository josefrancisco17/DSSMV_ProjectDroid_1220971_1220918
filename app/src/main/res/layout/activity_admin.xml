<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.AdminActivity" android:background="#141414">

    <TextView
            android:text="Admin Menu"
            android:layout_width="270dp"
            android:layout_height="60dp" android:id="@+id/textView10"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.496" app:layout_constraintVertical_bias="0.233"
            android:textAlignment="center" android:textStyle="bold" android:textSize="24sp" android:typeface="serif"
            android:textColor="#EEEEEE"/>
    <Button
            android:text="Create"
            android:layout_width="270dp"
            android:layout_height="60dp" android:id="@+id/adminCreateLibraryButton"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.409" android:backgroundTint="#393E46" android:textColor="#EEEEEE"
            android:textStyle="bold" android:textSize="16sp" app:layout_constraintHorizontal_bias="0.496"/>
    <Button
            android:text="Delete"
            android:layout_width="270dp"
            android:layout_height="60dp" android:id="@+id/adminDeleteLibraryButton"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.499" android:backgroundTint="#00ADB5" android:textColor="#EEEEEE"
            android:textStyle="bold" android:textSize="16sp" app:layout_constraintHorizontal_bias="0.496"/>
    <TextView
            android:text="Libraries"
            android:layout_width="270dp"
            android:layout_height="40dp" android:id="@+id/textView13"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintVertical_bias="0.34" android:textAlignment="center" android:textStyle="bold"
            android:textSize="20sp" android:textColor="#EEEEEE"/>
    <TextView
            android:text="Books"
            android:layout_width="270dp"
            android:layout_height="40dp" android:id="@+id/textView15"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintVertical_bias="0.639" android:textSize="20sp" android:textStyle="bold"
            android:textAlignment="center" android:textColor="#EEEEEE"/>
    <Button
            android:text="Create"
            android:layout_width="270dp"
            android:layout_height="60dp" android:id="@+id/adminCreateBookButton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintVertical_bias="0.718"
            android:backgroundTint="#393E46" android:textStyle="bold" android:textColor="#EEEEEE"
            android:textSize="16sp" app:layout_constraintHorizontal_bias="0.496"/>
    <Button
            android:text="Log out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/adminLogOutButton"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.05" app:layout_constraintVertical_bias="0.061"
            android:textColor="#EEEEEE" android:backgroundTint="#393E46"/>
</androidx.constraintlayout.widget.ConstraintLayout>
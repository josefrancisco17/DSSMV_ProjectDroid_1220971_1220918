<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:orientation="vertical"
        android:gravity="center" android:background="#141414">

    <TextView
            android:id="@+id/textview_reviewer"
            android:text="Reviewer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:textSize="16sp" android:textAllCaps="false"
            android:textStyle="bold" android:textColor="#EEEEEE"/>

    <ScrollView
            android:layout_width="383dp"
            android:layout_height="87dp">
        <TextView
                android:id="@+id/textview_review"
                android:text="Review"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:textColor="#EEEEEE"/>
    </ScrollView>

    <TextView
            android:id="@+id/textview_recommended"
            android:text="Recommended"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:textSize="12sp" android:textStyle="bold"
            android:textColor="#EEEEEE"/>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/activity_checkout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:orientation="vertical"
        android:gravity="center">

    <TextView
            android:id="@+id/textview_BookName"
            android:text="Book Name"
            android:layout_width="380dp"
            android:layout_height="44dp" android:textAlignment="center" android:textStyle="bold"
            android:textAllCaps="false" android:textSize="18sp"/>
    <TextView
            android:id="@+id/textview_LibraryName"
            android:text="Library Name"
            android:layout_width="382dp"
            android:layout_height="45dp" android:textAlignment="center" android:textStyle="bold"
            android:textSize="17sp"/>
    <TextView
            android:id="@+id/textview_dueDate"
            android:text="DueDate"
            android:layout_width="386dp"
            android:layout_height="33dp" android:textAlignment="center" android:textAllCaps="false"
            android:textStyle="bold|italic" android:textSize="16sp"/>

    <TextView
            android:id="@+id/textview_active"
            android:text="Active"
            android:layout_width="383dp"
            android:layout_height="36dp" android:textAlignment="center" android:textSize="14sp"/>
</LinearLayout>

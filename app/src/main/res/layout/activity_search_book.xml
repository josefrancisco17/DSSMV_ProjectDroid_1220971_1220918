<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.SearchBookActivity"
        android:id="@+id/listviewbooks" android:background="#141414">

    <Button
            android:text="Return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/backBooks"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.05" app:layout_constraintVertical_bias="0.023"
            android:onClick="backSearchLibraryActivity" android:textColor="#EEEEEE"/>
    <androidx.appcompat.widget.SearchView
            android:layout_width="414dp"
            android:layout_height="61dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.666" app:layout_constraintVertical_bias="0.136"
            android:id="@+id/searchViewBooks"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="393dp"
            android:layout_height="457dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/searchViewBooks"
            app:layout_constraintVertical_bias="0.0"
            android:id="@+id/recyclerViewBooks"/>
    <TextView
            android:text="Search Library Book"
            android:layout_width="221dp"
            android:layout_height="65dp" android:id="@+id/titleSearchBook"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.952" app:layout_constraintVertical_bias="0.029"
            android:textAlignment="center" android:textStyle="bold" android:fontFamily="serif" android:textSize="24sp"
            android:textColor="#EEEEEE"/>
</androidx.constraintlayout.widget.ConstraintLayout>
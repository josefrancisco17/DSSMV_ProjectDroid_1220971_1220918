<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.ReviewsActivity" android:background="#141414">

    <Button
            android:text="Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/backReviews"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.05" app:layout_constraintVertical_bias="0.023"
            android:onClick="backMainActivity" android:textColor="#EEEEEE" android:backgroundTint="#393E46"/>
    <TextView
            android:text="Reviews"
            android:layout_width="136dp"
            android:layout_height="50dp" android:id="@+id/textView4"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.949" app:layout_constraintVertical_bias="0.023"
            android:textSize="24sp" android:textStyle="bold" android:textAllCaps="false"
            android:textAlignment="center" android:typeface="serif" android:textColor="#EEEEEE"/>
    <ListView
            android:layout_width="412dp"
            android:layout_height="561dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.496" android:id="@+id/listViewReviews"
            app:layout_constraintHorizontal_bias="0.416"/>
    <Button
            android:text="Review"
            android:layout_width="163dp"
            android:layout_height="56dp" android:id="@+id/createReviewButton"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.976"
            android:textColor="#EEEEEE" android:textSize="20sp" android:backgroundTint="#00ADB5"/>
</androidx.constraintlayout.widget.ConstraintLayout>
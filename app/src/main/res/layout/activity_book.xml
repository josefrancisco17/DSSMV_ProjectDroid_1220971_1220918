<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.BookActivity">

    <TextView
            android:layout_width="217dp"
            android:layout_height="51dp" android:id="@+id/titleBook"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.974" app:layout_constraintVertical_bias="0.151"
            android:textAlignment="center" android:textStyle="bold" android:fontFamily="serif" android:textSize="20sp"
            android:text="Title"/>
    <Button
            android:text="Home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/backBook"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.05" app:layout_constraintVertical_bias="0.023"
            android:onClick="backMainActivity"/>
    <ImageView
            android:layout_width="189dp"
            android:layout_height="243dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/coverBook"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.241"/>
    <TextView
            android:text="Stateentyb"
            android:layout_width="224dp"
            android:layout_height="29dp" android:id="@+id/byStatementBook"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="0.229"
            android:textAlignment="center"/>
    <TextView
            android:text="publishdate"
            android:layout_width="98dp"
            android:layout_height="101dp"
            android:id="@+id/publishDateBook"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.623" app:layout_constraintVertical_bias="0.306"/>
    <TextView
            android:text="numberofpages"
            android:layout_width="118dp"
            android:layout_height="106dp"
            android:id="@+id/numberofPagesBook"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="0.304"/>
    <ScrollView
            android:layout_width="410dp"
            android:layout_height="223dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.71"
            android:id="@+id/scrollView2">
        <TextView
                android:text="description"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/descriptionBook"
        />
    </ScrollView>
    <TextView
            android:text="Library"
            android:layout_width="218dp"
            android:layout_height="74dp" android:id="@+id/libraryBook"
            android:textStyle="bold" android:textSize="24sp"
            android:textAlignment="center" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="666dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="189dp"
            android:layout_marginEnd="12dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.276" app:layout_constraintVertical_bias="0.0"
            android:typeface="serif"/>
    <Button
            android:text="CheckOut"
            android:layout_width="137dp"
            android:layout_height="80dp" android:id="@+id/checkOutButton"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.211" app:layout_constraintVertical_bias="0.955"/>
    <Button
            android:text="Reviews"
            android:layout_width="146dp"
            android:layout_height="83dp" android:id="@+id/reviewButton"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.837" app:layout_constraintVertical_bias="0.955"/>
</androidx.constraintlayout.widget.ConstraintLayout>
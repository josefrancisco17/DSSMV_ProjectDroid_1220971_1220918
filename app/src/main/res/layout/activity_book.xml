<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.BookActivity">

    <TextView
            android:layout_width="217dp"
            android:layout_height="51dp" android:id="@+id/titleBook"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.974" app:layout_constraintVertical_bias="0.151"
            android:textAlignment="center" android:textStyle="bold" android:fontFamily="serif" android:textSize="20sp"
            android:text="Title"/>
    <Button
            android:text="Home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/backBook"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.05" app:layout_constraintVertical_bias="0.023"
            android:onClick="backMainActivity"/>
    <ImageView
            android:layout_width="189dp"
            android:layout_height="243dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/coverBook"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.241"/>
    <TextView
            android:text="Stateentyb"
            android:layout_width="224dp"
            android:layout_height="29dp" android:id="@+id/byStatementBook"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="0.229"
            android:textAlignment="center"/>
    <TextView
            android:text="publishdate"
            android:layout_width="98dp"
            android:layout_height="101dp"
            android:layout_marginTop="199dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="470dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="189dp" android:layout_marginEnd="110dp"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/publishDateBook"
            app:layout_constraintHorizontal_bias="0.142" app:layout_constraintVertical_bias="0.23"
            android:textAlignment="center"/>
    <TextView
            android:text="numberofpages"
            android:layout_width="118dp"
            android:layout_height="106dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="468dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="199dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="301dp" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/numberofPagesBook" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.272" android:textAlignment="center"/>
    <Button
            android:text="CheckOut"
            android:layout_width="136dp"
            android:layout_height="60dp" android:id="@+id/CheckOutButton"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="621dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="50dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp" android:layout_marginEnd="235dp"
            app:layout_constraintEnd_toEndOf="parent" android:onClick="launchCheckOutActivity"/>
    <Button
            android:text="Reviews"
            android:layout_width="138dp"
            android:layout_height="58dp" android:id="@+id/reviewsButton"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="623dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="50dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="217dp" android:layout_marginEnd="56dp"
            app:layout_constraintEnd_toEndOf="parent" android:onClick="launchReviewsActivity"/>
    <ScrollView
            android:layout_width="410dp"
            android:layout_height="223dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.71">
        <TextView
                android:text="description"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/descriptionBook"
        />
    </ScrollView>
    <TextView
            android:text="Library"
            android:layout_width="218dp"
            android:layout_height="74dp" android:id="@+id/libraryBook"
            android:textStyle="bold" android:textSize="24sp"
            android:textAlignment="center" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="666dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="189dp"
            android:layout_marginEnd="12dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.276" app:layout_constraintVertical_bias="0.0"
            android:typeface="serif"/>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.MakeBookActivity" android:background="#141414">

    <Button
            android:text="Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/backButtonMakeBook"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.05" app:layout_constraintVertical_bias="0.023"
            android:textColor="#EEEEEE" android:backgroundTint="#393E46"/>
    <TextView
            android:text="Create Book"
            android:layout_width="158dp"
            android:layout_height="57dp" android:id="@+id/textView25"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.936"
            app:layout_constraintVertical_bias="0.023" android:textSize="24sp" android:textStyle="bold"
            android:textAlignment="center" android:textColor="#EEEEEE"/>
    <TextView
            android:text="Select a Library"
            android:layout_width="314dp"
            android:layout_height="29dp" android:id="@+id/textView26"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintVertical_bias="0.129" android:textAlignment="center" android:textColor="#EEEEEE"/>
    <androidx.appcompat.widget.SearchView
            android:layout_width="401dp"
            android:layout_height="30dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="0.182"
            android:id="@+id/searchViewMAkeBook"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="391dp"
            android:layout_height="169dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.336"
            android:id="@+id/recyclerViewMakeBook"/>
    <TextView
            android:text="Book ISBN:"
            android:layout_width="129dp"
            android:layout_height="33dp" android:id="@+id/textView27"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.535" android:textAlignment="center"
            android:textColor="#EEEEEE"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/bookIsbnInputMakeBook"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.517" app:layout_constraintVertical_bias="0.593"
            android:textColor="#EEEEEE" android:hint="9780735211292" android:textColorHint="#EEEEEE"/>
    <TextView
            android:text="Book Stock:"
            android:layout_width="95dp"
            android:layout_height="37dp" android:id="@+id/textView28"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.678" android:textAlignment="center" android:textColor="#EEEEEE"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/bookStockInputMakeBook"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.517" app:layout_constraintVertical_bias="0.74"
            android:textColor="#EEEEEE" android:hint="7" android:textColorHint="#EEEEEE"/>
    <Button
            android:text="Submit"
            android:layout_width="148dp"
            android:layout_height="65dp" android:id="@+id/submitButtonMakeBook"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintVertical_bias="0.891"
            android:textColor="#EEEEEE" android:backgroundTint="#00ADB5" android:textSize="20sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>